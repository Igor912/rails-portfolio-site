<div id="left-bar">
  <p>
    <a class="btn btn-info btn-lg btn-block" role="button" href="<%= new_comment_path %>">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Додати
    </a>
  </p>
</div>

<div id="content">
  <h1>Відгуки</h1>
  <% @comments.each do |comment| %>
    <div class="comment_wrapper">
      <div class="description">
        <li>
          <%= comment.description %>
        </li>
      </div>
      <div class="user_name">
        <%= link_to 'Деталі', "/comments/#{comment.id}", :class => 'btn btn-default btn-xs' %>
      </div>
      <p class="date">
        Commented <%= time_ago_in_words(comment.created_at) %> ago
      </p>
    </div>
  <% end %>
</div>